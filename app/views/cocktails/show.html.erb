<div class="container">
  <p id="notice"><%= notice %></p>
  <p>
    <strong>Cocktail:</strong>
    <%= @cocktail.name %>
  </p>

  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %>
        <%= dose.ingredient.name %>
      </li>
    <% end %>
  </ul>
</div>

<br>
<br>
<%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail.id) %> |
<%= link_to 'Back to cocktail list', cocktails_path %>
